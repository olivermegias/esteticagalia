import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const servicios = await getCollection('servicios');
  return servicios.map((servicio) => ({
    params: { slug: servicio.slug },
    props: { servicio },
  }));
}

const { servicio } = Astro.props;
const { Content } = await servicio.render();

const categorias = {
  'facial': 'Facial',
  'mirada': 'Mirada',
  'corporal': 'Corporal',
  'depilacion': 'Depilación'
};

// Simular múltiples imágenes (ajusta según tu estructura de datos)
const imagenes = servicio.data.imagenes || (servicio.data.imagen ? [servicio.data.imagen] : []);
