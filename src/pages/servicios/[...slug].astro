            </div>

            <h1>{servicio.data.title}</h1>
            
            <p class="servicio-intro">
              {servicio.data.descripcion}
            </p>

            {servicio.data.precio && (
              <div class="servicio-precio-badge">
                <span class="precio-valor">{servicio.data.precio}</span>
              </div>
            )}
          </div>

          <article class="servicio-content prose">
            <Content />
          </article>

          <!-- CTA en mobile -->
