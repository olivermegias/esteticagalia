            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    background-color: var(--color-cream);
    overflow: hidden;
    padding-top: 2rem;
  }

  .hero-bg-accent {
    position: absolute;
    top: 10%;
    right: -5%;
    width: 50vw;
    height: 50vw;
    background: #fcf7f4 url("/images/logo.png") 100% 20% no-repeat;
    background-size: 90%;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    z-index: 0;
    opacity: 0.7;
  }

  .hero-bg-accent-small {
    position: absolute;
    top: 8%;
    left: 5%;
    width: 20vw;
    height: 20vw;
    background: #fcf7f4;
    background-size: 60%;
    border-radius: 50% 40% 60% 50% / 60% 50% 40% 60%;
    z-index: 0;
    opacity: 0.6;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 700px;
  }

  .hero-tagline {
    display: block;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 1.3rem;
    color: var(--color-brand);
    margin-bottom: 1rem;
    font-weight: 600;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.2rem);
    line-height: 1.2;
    margin-bottom: 1rem;
    font-weight: 700;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: var(--color-secondary);
    text-align: center;
  }

  .hero-quote {
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 3rem;
    text-align: center;
    color: var(--color-brand);
    font-style: italic;
  }

  .hero-buttons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-full);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-base);
    font-size: 1rem;
  }

  .btn .icon {
    flex-shrink: 0;
  }

  .btn-primary {
    background: var(--color-brand);
    color: white;
    padding: 1.2rem 2.5rem;
    border-radius: 50px;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 1px;
  }

  .btn-outline {
    border: 1px solid var(--color-brand);
    color: var(--color-brand);
    padding: 1.2rem 2.5rem;
    border-radius: 50px;
  }

  .btn-primary-inverted {
    background: var(--color-accent);
    color: var(--color-secondary);
  }

  .btn-primary-inverted:hover {
    background: var(--color-accent-light);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-secondary-inverted {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary-inverted:hover {
    background: white;
    color: var(--color-secondary);
    transform: translateY(-2px);
  }

  /* About Section */
  .about {
    padding: 1rem 0 2rem;
    background-color: var(--color-bg); /* Color verde salvia de fondo */
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .feature-media {
    width: 80px;
    height: 80px;
    margin-bottom: 2rem;
    overflow: hidden;
    border-radius: 15px; /* Imagen ligeramente redondeada */
  }

  .feature-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* OVACO Badge - Estilo Pill */
  .ovaco-badge-container {
    display: flex;
    justify-content: flex-start;
    margin-top: 2rem;
  }

  .ovaco-badge {
    background: #ffffff;
    padding: 0.8rem 2rem;
    border-radius: 100px; /* Forma de píldora */
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    font-size: 1rem;
    color: #333;
  }

  .check-icon {
    background: #fdf4eb;
    color: #d4a373;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  .about-content h2 {
    text-align: center;
    font-size: 2.75rem;
    color: var(--color-logo);
    margin-bottom: 1rem;
    font-weight: 700;
    position: relative;
  }

  .about-content h2::after {
    content: "";
    display: block;
    width: 90px;
    height: 6px;
    margin: 0.75rem auto 0;
    border-radius: 999px;
    background: linear-gradient(90deg, var(--color-cream), var(--color-logo));
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
    opacity: 0.95;
  }

  .about-content > p {
    text-align: center;
    font-size: 1.05rem;
    color: var(--color-logo);
    max-width: 820px;
    margin: 0 auto 3.5rem;
    line-height: 1.9;
  }

  /* Feature cards: background image with overlay + content */
  .feature {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    height: 400px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    cursor: pointer;
  }

  .feature:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
  }

  .feature-image-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .feature-image-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .feature:hover .feature-image-bg img {
    transform: scale(1.05);
  }

  .feature-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 2;
  }

  .feature-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    z-index: 3;
    color: white;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .feature h3 {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .feature p {
    color: rgba(255, 255, 255, 0.95);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .feature {
      height: 320px;
    }

    .feature-content {
      padding: 1.5rem;
    }

    .feature h3 {
      font-size: 1.25rem;
    }

    .feature p {
      font-size: 0.9rem;
    }
  }

  @media (min-width: 1024px) {
    .feature {
      height: 450px;
    }

    .feature-content {
      padding: 2.5rem;
    }

    .feature h3 {
      font-size: 1.75rem;
    }
  }

  .ovaco-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    text-align: center;
    padding: 0.9rem 1.25rem;
    background: #ffffff;
    color: var(--color-secondary);
    border-radius: calc(var(--radius-lg) + 4px);
    font-size: 1.05rem;
    font-weight: 700;
    box-shadow: var(--shadow-md);
    border: 1px solid rgba(0, 0, 0, 0.06);
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base);
    margin: 1rem auto 0;
    width: max-content;
  }

  /* make sure .ovaco-badge inside .about-content does not inherit the pale paragraph color */
  .about-content .ovaco-badge,
  .ovaco-badge {
    color: var(--color-secondary);
  }

  .ovaco-badge strong {
    color: inherit;
    font-weight: 700;
  }

  .ovaco-badge .badge-icon {
    background: var(--color-cream);
    padding: 6px;
    border-radius: 6px;
    color: var(--color-primary);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .ovaco-badge:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  /* Treatments Section */
  .treatments {
    padding: 1rem 0 4rem;
    background: var(--color-bg-soft);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    color: var(--color-secondary);
    margin-bottom: 3rem;
  }

  .treatments-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .treatment-card {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    border: 1px solid var(--color-border-light);
  }

