---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getBeautySalonSchema } from "../data/schema";
import About from "../components/sections/About.astro";
import FeaturedTreatments from "../components/sections/FeaturedTreatments.astro";
import LocationMap from "../components/sections/LocationMap.astro";
import { business } from "../data/business";

const schema = getBeautySalonSchema();
---

<BaseLayout
  title="Estética GaliaBeauty - Centro de Estética en Granada"
  description="Centro de estética avanzada en Granada. Tratamientos faciales, corporales, microblading y los últimos avances en estética profesional."
  schema={schema}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg-accent"></div>
    <div class="hero-bg-accent-small"></div>
    <div class="container">
      <div class="hero-content">
        <span class="hero-tagline">Centro de Estética Avanzada en Granada</span>
        <h1 class="hero-title">
          Realza tu belleza natural con calma y elegancia
        </h1>
        <p class="hero-quote">
          Cuidamos de tu piel, atendemos sus necesidades y personalizamos los
          tratamientos para conseguir los mejores resultados
        </p>
        <div class="hero-buttons">
          <a href={`tel:${business.mainPhone}`} class="btn btn-primary">Llámanos</a>
          <a href="/servicios" class="btn btn-outline">Explorar Servicios</a>
        </div>
      </div>
    </div>
  </section>

  <About />
  <FeaturedTreatments />
  <LocationMap />
</BaseLayout>

<style>
  /* Hero Section – único de Home */
  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    background-color: var(--color-cream);
    overflow: hidden;
    padding-top: 2rem;
  }

  .hero-bg-accent {
    position: absolute;
    top: 10%;
    right: -5%;
    width: 50vw;
    height: 50vw;
    background: #fcf7f4 url("/images/logo.png") 100% 20% no-repeat;
    background-size: 90%;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    z-index: 0;
    opacity: 0.7;
  }

  .hero-bg-accent-small {
    position: absolute;
    top: 8%;
    left: 5%;
    width: 20vw;
    height: 20vw;
    background: #fcf7f4;
    border-radius: 50% 40% 60% 50% / 60% 50% 40% 60%;
    z-index: 0;
    opacity: 0.6;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 700px;
  }

  .hero-tagline {
    display: block;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 1.3rem;
    color: var(--color-brand);
    margin-bottom: 1rem;
    font-weight: 600;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.2rem);
    line-height: 1.2;
    margin-bottom: 1rem;
    font-weight: 700;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: var(--color-secondary);
    text-align: center;
  }

  .hero-quote {
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 3rem;
    text-align: center;
    color: var(--color-brand);
    font-style: italic;
  }

  .hero-buttons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .hero { min-height: 60vh; padding-top: 1rem; }
    .hero-tagline { font-size: 0.9rem; letter-spacing: 2px; }
    .hero-title { font-size: 1.75rem; }
    .hero-quote { font-size: 1rem; margin-top: 2rem; }
    .hero-buttons { flex-direction: column; width: 100%; gap: 1rem; }
    .hero-buttons .btn { width: 100%; justify-content: center; }
  }

  @media (max-width: 480px) {
    .hero { min-height: 55vh; }
    .hero-tagline { font-size: 0.8rem; }
    .hero-title { font-size: 1.5rem; }
    .hero-quote { font-size: 0.9rem; }
  }
</style>
