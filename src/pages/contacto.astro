---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/sections/PageHero.astro";
import CtaBanner from "../components/sections/CtaBanner.astro";
import MapPinIcon from "../components/icons/MapPinIcon.astro";
import PhoneIcon from "../components/icons/PhoneIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import ClockIcon from "../components/icons/ClockIcon.astro";
import InstagramIcon from "../components/icons/InstagramIcon.astro";
import WhatsAppIcon from "../components/icons/WhatsAppIcon.astro";
import { business } from "../data/business";
import { getBeautySalonSchema } from "../data/schema";
import TiktokIcon from "../components/icons/TiktokIcon.astro";

const schema = getBeautySalonSchema();
---

<BaseLayout
  title="Contacto - Estética GaliaBeauty"
  description="Contacta con Estética GaliaBeauty en Granada. Reserva tu cita, consulta nuestros horarios y cómo llegar. Estamos en C/ Torre de los Picos nº11."
  schema={schema}
>
  <PageHero
    title="Contacto"
    subtitle="Estamos aquí para atenderte. Reserva tu cita o consúltanos cualquier duda"
  />

  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Columna Izquierda: Mapa + Cómo llegar -->
        <div class="col-left">
          <div class="card map-card">
            <h2>
              <MapPinIcon size={22} />
              Cómo llegar
            </h2>
            <div class="map-container">
              <iframe
                src={business.mapEmbedUrl}
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Ubicación de Estética GaliaBeauty en Granada"></iframe>
            </div>
            <div class="map-footer">
              <p>
                <strong>Barrio del Zaidín, Granada.</strong> Fácil aparcamiento en
                las inmediaciones.
              </p>
              <a
                href={business.mapDirectionsUrl}
                target="_blank"
                rel="noopener"
                class="btn btn-outline"
              >
                <MapPinIcon size={16} />
                Abrir en Google Maps
              </a>
            </div>
          </div>
        </div>

        <!-- Columna Derecha: Info de contacto + Horarios + Redes -->
        <div class="col-right">
          <div class="card info-card">
            <!-- Bloque: Datos de contacto -->
            <h2>Información de contacto</h2>

            <div class="info-list">
              <!-- Dirección -->
              <div class="info-item">
                <div class="info-icon">
                  <MapPinIcon size={20} />
                </div>
                <div class="info-content">
                  <strong>Dirección</strong>
                  <p>
                    {business.address.street}<br />{business.address.city}, CP: {
                      business.address.postalCode
                    }
                  </p>
                  <a
                    href={business.mapDirectionsUrl}
                    target="_blank"
                    rel="noopener"
                    class="info-link"
                  >
                    Cómo llegar →
                  </a>
                </div>
              </div>

              <!-- Teléfonos -->
              <div class="info-item">
                <div class="info-icon">
                  <PhoneIcon size={20} />
                </div>
                <div class="info-content">
                  <strong>Teléfonos</strong>
                  {
                    business.phones.map((phone) => (
                      <p>
                        <a href={`tel:${phone.number}`}>{phone.display}</a>
                        <span class="phone-label">({phone.label})</span>
                      </p>
                    ))
                  }
                </div>
              </div>

              <!-- Email -->
              <div class="info-item">
                <div class="info-icon">
                  <MailIcon size={20} />
                </div>
                <div class="info-content">
                  <strong>Email</strong>
                  <p>
                    <a href={`mailto:${business.email}`}>{business.email}</a>
                  </p>
                </div>
              </div>
            </div>

            <div class="divider"></div>

            <!-- Bloque: Horarios -->
            <div class="hours-block">
              <h3>
                <ClockIcon size={18} />
                Horario de atención
              </h3>
              <ul class="hours-list">
                {
                  business.hours.map((item) => (
                    <li class:list={[{ closed: item.closed }]}>
                      <span class="day">{item.day}</span>
                      <span class="hours">{item.hours}</span>
                    </li>
                  ))
                }
              </ul>
            </div>

            <div class="divider"></div>

            <!-- Bloque: Redes Sociales -->
            <div class="social-block">
              <h3>Síguenos</h3>
              <div class="social-links">
                <a
                  href={business.social.instagram}
                  target="_blank"
                  rel="noopener"
                  aria-label="Instagram"
                  class="social-link instagram"
                >
                  <InstagramIcon size={18} />
                  {business.social.instagramHandle}
                </a>
                <a
                  href={business.social.whatsapp}
                  target="_blank"
                  rel="noopener"
                  aria-label="WhatsApp"
                  class="social-link whatsapp"
                >
                  <WhatsAppIcon size={18} />
                  WhatsApp
                </a>
                <a
                  href={business.social.tiktok}
                  target="_blank"
                  rel="noopener"
                  aria-label="TikTok"
                  class="social-link tiktok"
                >
                  <TiktokIcon size={18} />
                  {business.social.tiktokHandle}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CtaBanner
    title="¿Prefieres llamarnos directamente?"
    text="Estaremos encantadas de atenderte y resolver todas tus dudas"
  />
</BaseLayout>

<style>
  /* ── Section ── */
  .contact-section {
    padding: 4rem 0;
    background: var(--color-bg-soft);
  }

  /* ── Grid de 2 columnas iguales ── */
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: stretch; /* ambas columnas misma altura */
  }

  /* ── Columnas: flex para que la card ocupe todo el alto ── */
  .col-left,
  .col-right {
    display: flex;
    flex-direction: column;
  }

  /* ── Card base ── */
  .card {
    flex: 1; /* ocupa todo el alto disponible de la columna */
    background: white;
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border-light);
    display: flex;
    flex-direction: column;
  }

  /* ── Títulos de card ── */
  .card h2 {
    font-size: 1.4rem;
    color: var(--color-secondary);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .card h2 :global(svg) {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  /* ── Mapa: el iframe crece para rellenar el espacio ── */
  .map-card {
    gap: 0; /* usamos flex para distribuir espacio */
  }

  .map-container {
    flex: 1; /* el mapa ocupa el espacio que sobre */
    border-radius: var(--radius-md);
    overflow: hidden;
    min-height: 260px;
  }

  .map-container iframe {
    display: block;
    width: 100%;
    height: 100%;
    min-height: 260px;
  }

  .map-footer {
    padding-top: 1.25rem;
    text-align: center;
    flex-shrink: 0;
  }

  .map-footer p {
    color: var(--color-muted);
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .map-footer .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* ── Lista de info de contacto ── */
  .info-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .info-item {
    display: flex;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border-soft);
  }

  .info-item:first-child {
    padding-top: 0;
  }
  .info-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .info-icon {
    width: 44px;
    height: 44px;
    background: var(--color-cream);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: var(--color-primary);
  }

  .info-content strong {
    display: block;
    color: var(--color-secondary);
    margin-bottom: 0.35rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .info-content p {
    margin: 0 0 0.3rem;
    color: var(--color-muted);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .info-content a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .info-content a:hover {
    color: var(--color-brand);
    text-decoration: underline;
  }

  .info-link {
    font-weight: 600;
    font-size: 0.875rem;
  }

  .phone-label {
    font-size: 0.82rem;
    color: var(--color-muted);
    margin-left: 0.4rem;
  }

  /* ── Divisor ── */
  .divider {
    height: 1px;
    background: var(--color-border-soft);
    margin: 1.25rem 0;
    flex-shrink: 0;
  }

  /* ── Horarios ── */
  .hours-block h3 {
    font-size: 1rem;
    color: var(--color-secondary);
    font-weight: 600;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hours-block h3 :global(svg) {
    color: var(--color-primary);
  }

  .hours-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .hours-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    transition: background var(--transition-base);
  }

  .hours-list li:hover {
    background: var(--color-bg-soft);
  }

  .hours-list .day {
    font-weight: 500;
    color: var(--color-secondary);
  }

  .hours-list .hours {
    color: var(--color-primary);
    font-weight: 600;
  }

  .hours-list li.closed .hours {
    color: var(--color-muted);
    font-weight: 400;
  }

  /* ── Redes Sociales ── */
  .social-block h3 {
    font-size: 1rem;
    color: var(--color-secondary);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    padding: 0.7rem 1rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all var(--transition-base);
    color: white;
  }

  .social-link.instagram {
    background: linear-gradient(
      45deg,
      #f09433 0%,
      #e6683c 25%,
      #dc2743 50%,
      #cc2366 75%,
      #bc1888 100%
    );
  }

  .social-link.tiktok {
    background: linear-gradient(
      45deg,
      #25F4EE 0%,
      #171717 50%,
      #FE2C55 100%
    );
  }

  .social-link.whatsapp {
    background: #25d366;
  }

  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.2);
  }

  /* ── Responsive ── */
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .col-left {
      order: 2;
    }
    .col-right {
      order: 1;
    }

    .map-container,
    .map-container iframe {
      min-height: 300px;
    }
  }

  @media (max-width: 600px) {
    .contact-section {
      padding: 2rem 0;
    }

    .card {
      padding: 1.25rem;
      border-radius: var(--radius-md);
    }

    .card h2 {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .map-container,
    .map-container iframe {
      min-height: 240px;
    }

    .social-links {
      flex-direction: column;
    }
    .social-link {
      flex: unset;
    }

    .info-item {
      flex-direction: column;
      align-items: flex-start;
    }
    .info-icon {
      width: 38px;
      height: 38px;
    }
  }
</style>
