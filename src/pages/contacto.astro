  const form = document.getElementById('contactForm');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Aquí irá la lógica de envío del formulario (ej: API, Netlify Forms, etc.)
    // Por ahora mostramos un mensaje de confirmación
    alert('¡Gracias por tu mensaje! Te responderemos lo antes posible.');
    (form as HTMLFormElement).reset();
  });
</script>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 40vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-cream);
    overflow: hidden;
  }

  .hero-bg-accent {
    position: absolute;
    top: 10%;
    right: -5%;
    width: 50vw;
    height: 50vw;
    background: #fcf7f4;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    z-index: 0;
    opacity: 0.7;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 700px;
    padding: 2rem;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-secondary);
    margin-bottom: 1rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-subtitle {
    font-size: 1.15rem;
    color: var(--color-primary);
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Contact Section */
  .contact-section {
    padding: 4rem 0;
    background: var(--color-bg-soft);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 2rem;
    align-items: start;
  }

  /* Info Card */
  .info-card,
  .hours-card,
  .form-card,
  .map-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid #e5e7eb;
  }

  .info-card h2,
  .hours-card h2,
  .form-card h2,
  .map-card h2 {
    font-size: 1.5rem;
    color: var(--color-secondary);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .hours-card h2 svg,
  .map-card h2 svg {
    color: var(--color-primary);
  }

  /* Info Items */
  .info-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #f3f4f6;
  }

  .info-item:last-of-type {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .info-icon {
    width: 48px;
    height: 48px;
    background: var(--color-cream);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: var(--color-primary);
  }

  .info-content strong {
    display: block;
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .info-content p {
    margin: 0 0 0.5rem;
    color: var(--color-muted);
    line-height: 1.6;
  }

  .info-content a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-content a:hover {
    color: var(--color-brand);
    text-decoration: underline;
  }

  .info-link {
    font-weight: 600;
    font-size: 0.9rem;
  }

  .phone-label {
    font-size: 0.85rem;
    color: var(--color-muted);
    margin-left: 0.5rem;
  }

  /* Social Section */
  .social-section {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #f3f4f6;
  }

  .social-section strong {
    display: block;
    color: var(--color-secondary);
    margin-bottom: 1rem;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .social-link.instagram {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: white;
  }

  .social-link.whatsapp {
    background: #25D366;
