---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import ServiciosFilter from "../components/islands/ServiciosFilter";
import PageHero from "../components/sections/PageHero.astro";
import CtaBanner from "../components/sections/CtaBanner.astro";
import { serviceCategories } from "../data/navigation";
import { getBeautySalonSchema } from "../data/schema";

const servicios = await getCollection("servicios");

const serviciosOrdenados = servicios.sort((a, b) => {
  if (a.data.categoria === b.data.categoria) {
    return a.data.orden - b.data.orden;
  }
  return a.data.categoria.localeCompare(b.data.categoria);
});

const serviciosData = serviciosOrdenados.map((s) => ({
  slug: s.slug,
  data: {
    title: s.data.title,
    categoria: s.data.categoria,
    descripcion: s.data.descripcion,
    duracion: s.data.duracion,
    precio: s.data.precio,
    imagen: Array.isArray(s.data.imagen) ? s.data.imagen[0] : s.data.imagen,
  },
}));

const schema = getBeautySalonSchema();
---

<BaseLayout
  title="Servicios - Estética GaliaBeauty"
  description="Descubre nuestra amplia gama de tratamientos profesionales: faciales, corporales, microblading, depilación y mucho más."
  schema={schema}
>
  <PageHero
    title="Nuestros Servicios"
    subtitle="Descubre nuestra amplia gama de tratamientos profesionales diseñados para realzar tu belleza natural"
  />

  <!-- Contenido principal con filtros interactivos -->
  <section class="servicios-section">
    <div class="container">
      <ServiciosFilter
        client:load
        categorias={serviceCategories as unknown as { id: string; label: string }[]}
        servicios={serviciosData}
      />
    </div>
  </section>

  <CtaBanner />
</BaseLayout>

<style>
  .servicios-section {
    padding: 4rem 0;
    background: var(--color-bg-soft);
  }

  @media (max-width: 768px) {
    .servicios-section { padding: 2rem 0; }
  }

  @media (max-width: 480px) {
    .servicios-section { padding: 1.5rem 0; }
  }
</style>

<style is:global>
  /* ================================
     SERVICIOS FILTER STYLES
     ================================ */

  .servicios-filter-wrapper {
    animation: fadeIn 0.6s ease-out;
  }

  /* ---- SEARCH BAR ---- */
  .search-bar {
    position: relative;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .search-icon {
    position: absolute;
    left: 1.25rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-muted);
    pointer-events: none;
    transition: color 0.3s ease;
  }

  .search-input {
    width: 100%;
    padding: 1rem 1.25rem 1rem 3.5rem;
    border: 2px solid var(--color-border-light, #e5e7eb);
    border-radius: 50px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: white;
    color: var(--color-secondary);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(139, 148, 116, 0.1);
  }

  .search-input:focus + .search-icon {
    color: var(--color-primary);
  }

  .search-input::placeholder {
    color: var(--color-muted);
  }

  .clear-search {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: #f3f4f6;
    border: none;
    border-radius: 50%;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--color-muted);
  }

  .clear-search:hover {
    background: #e5e7eb;
    color: var(--color-secondary);
    transform: translateY(-50%) scale(1.1);
  }

  /* ---- FILTER NAV ---- */
  .filter-nav {
    display: flex;
    overflow-x: auto;
    gap: 0.75rem;
    padding: 1rem 0;
    margin-bottom: 1.5rem;
    -ms-overflow-style: none;
    scrollbar-width: none;
    justify-content: center;
    flex-wrap: wrap;
  }

  .filter-nav::-webkit-scrollbar {
    display: none;
  }

  .filter-btn {
    white-space: nowrap;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-size: 0.95rem;
    font-weight: 600;
    background: white;
    color: var(--color-secondary);
    border: 2px solid var(--color-primary);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  .filter-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: var(--color-cream);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .filter-btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .filter-btn:hover {
    transform: translateY(-2px);
  }

  .filter-btn.active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    box-shadow: 0 4px 12px rgba(139, 148, 116, 0.3);
    transform: translateY(-2px);
  }

  .filter-btn.active::before {
    display: none;
  }

  /* ---- RESULTS COUNT ---- */
  .results-count {
    text-align: center;
    font-size: 0.95rem;
    color: var(--color-muted);
    margin-bottom: 2rem;
    font-weight: 500;
  }

  /* ---- SERVICIOS GRID ---- */
  .servicios-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    min-height: 400px;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .servicio-card.animate-in {
    animation: slideUp 0.6s ease-out both;
  }

  .servicio-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid #e5e7eb;
    cursor: pointer;
  }

  .servicio-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px rgba(0, 0, 0, 0.15);
  }

  .servicio-image {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: var(--color-cream);
  }

  .servicio-image::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(139, 148, 116, 0.15);
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .servicio-card:hover .servicio-image::after {
    opacity: 0.3;
  }

  .servicio-icon {
    opacity: 0.9;
    transition: transform 0.3s ease;
    color: var(--color-primary);
    stroke: var(--color-primary);
  }

  .servicio-card:hover .servicio-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .servicio-content {
    padding: 1.5rem;
  }

  .servicio-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    gap: 0.5rem;
  }

  .servicio-categoria {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
    background: var(--color-cream);
    border-radius: 50px;
    border: 1px solid var(--color-primary);
  }

  .servicio-duracion {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-muted);
  }

  .servicio-content h3 {
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .servicio-descripcion {
    color: var(--color-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.25rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .servicio-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid #e5e7eb;
  }

  .servicio-precio {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .servicio-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .servicio-link:hover {
    background: var(--color-secondary);
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(60, 60, 60, 0.3);
  }

  .servicio-link svg {
    transition: transform 0.3s ease;
  }

  .servicio-link:hover svg {
    transform: translateX(4px);
  }

  /* ---- NO RESULTS ---- */
  .no-results {
    grid-column: 1 / -1;
    text-align: center;
    padding: 4rem 2rem;
    animation: fadeIn 0.6s ease-out;
  }

  .no-results-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    opacity: 0.3;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  .no-results h3 {
    color: var(--color-secondary);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .no-results p {
    color: var(--color-muted);
    margin-bottom: 1.5rem;
  }

  .btn-reset {
    padding: 0.875rem 2rem;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-reset:hover {
    background: var(--color-secondary);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(60, 60, 60, 0.3);
  }

  /* ---- RESPONSIVE ---- */
  @media (max-width: 768px) {
    .search-bar {
      margin-bottom: 1.5rem;
    }

    .search-input {
      padding: 0.875rem 1rem 0.875rem 3rem;
      font-size: 0.95rem;
    }

    .filter-nav {
      justify-content: flex-start;
      flex-wrap: nowrap;
    }

    .servicios-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .servicio-card {
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .servicio-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .servicio-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }

    .servicio-link {
      justify-content: center;
    }
  }
</style>
