---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import ServiciosFilter from "../components/islands/ServiciosFilter";

const servicios = await getCollection("servicios");

// Ordenar servicios por categoría y orden
const serviciosOrdenados = servicios.sort((a, b) => {
  if (a.data.categoria === b.data.categoria) {
    return a.data.orden - b.data.orden;
  }
  return a.data.categoria.localeCompare(b.data.categoria);
});

const categorias = [
  { id: "todos", label: "Todos" },
  { id: "facial", label: "Facial" },
  { id: "mirada", label: "Mirada" },
  { id: "corporal", label: "Corporal" },
  { id: "depilacion", label: "Depilación" },
];

// Preparar los datos para el componente React
const serviciosData = serviciosOrdenados.map(s => ({
  slug: s.slug,
  data: {
    title: s.data.title,
    categoria: s.data.categoria,
    descripcion: s.data.descripcion,
    duracion: s.data.duracion,
    precio: s.data.precio,
    imagen: Array.isArray(s.data.imagen) ? s.data.imagen[0] : s.data.imagen,
  }
}));
---

<BaseLayout
  title="Servicios - Estética GaliaBeauty"
  description="Descubre nuestra amplia gama de tratamientos profesionales: faciales, corporales, microblading, depilación y mucho más."
>
  <Fragment slot="head">
    <title>Servicios - Estética GaliaBeauty</title>
    <meta
      name="description"
      content="Descubre nuestra amplia gama de tratamientos profesionales: faciales, corporales, microblading, depilación y mucho más."
    />
    <!-- Schema.org para SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BeautySalon",
        "name": "Estética GaliaBeauty",
        "description": "Centro de estética avanzada en Granada",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "C/ Torre de los Picos nº11",
          "addressLocality": "Granada",
          "postalCode": "18008",
          "addressCountry": "ES"
        },
        "telephone": "+34652112621",
        "priceRange": "€€",
        "image": "https://esteticagalia.es/images/logo.png"
      }
    </script>
  </Fragment>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg-accent"></div>
    <div class="hero-content">
      <h1 class="hero-title">Nuestros Servicios</h1>
      <p class="hero-subtitle">
        Descubre nuestra amplia gama de tratamientos profesionales diseñados
        para realzar tu belleza natural
      </p>
    </div>
  </section>

  <!-- Contenido principal con filtros interactivos -->
  <section class="servicios-section">
    <div class="container">
      <!-- Componente React Island con client:load para interactividad -->
      <ServiciosFilter 
        client:load
        categorias={categorias}
        servicios={serviciosData}
      />
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta">
    <div class="container">
      <div class="cta-content">
        <h2>¿Lista para reservar tu cita?</h2>
        <p>
          Nuestro equipo de profesionales está listo para ofrecerte el mejor
          servicio
        </p>
        <div class="cta-buttons">
          <a href="tel:+34652112621" class="btn btn-primary">
            <svg
              class="icon"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
            Llamar ahora
          </a>
          <a href="/contacto" class="btn btn-secondary"> Contactar </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .hero {
    position: relative;
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-cream);
    overflow: hidden;
  }

  .hero-bg-accent {
    position: absolute;
    top: 10%;
    right: -5%;
    width: 50vw;
    height: 50vw;
    background: #fcf7f4;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    z-index: 0;
    opacity: 0.7;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: var(--color-secondary);
    max-width: 800px;
    padding: 2rem;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    animation: fadeInUp 1s ease-out;
    color: var(--color-secondary);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    animation: fadeInUp 1s ease-out 0.2s both;
    color: var(--color-primary);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Servicios Section */
  .servicios-section {
    padding: 4rem 0;
    background: var(--color-bg-soft);
  }

  /* CTA Section */
  .cta {
    padding: 5rem 0;
    background: var(--color-primary);
    color: white;
  }

  .cta-content {
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease-out;
    color: white;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-base);
    font-size: 1rem;
  }

  .btn .icon {
    flex-shrink: 0;
  }

  .btn-primary {
    background: var(--color-cream);
    color: var(--color-secondary);
  }

  .btn-primary:hover {
    background: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: white;
    color: var(--color-secondary);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: 30vh;
    }

    .hero-title {
      font-size: 1.75rem;
      margin-bottom: 0.75rem;
    }

    .hero-subtitle {
      font-size: 0.95rem;
    }

    .servicios-section {
      padding: 2rem 0;
    }

    .cta {
      padding: 3rem 0;
    }

    .cta-content h2 {
      font-size: 1.5rem;
      margin-bottom: 0.75rem;
    }

    .cta-content p {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
      gap: 0.75rem;
    }

    .btn {
      width: 100%;
      justify-content: center;
      padding: 0.875rem 1.5rem;
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      min-height: 25vh;
    }

    .hero-title {
      font-size: 1.5rem;
    }

    .hero-subtitle {
      font-size: 0.9rem;
    }

    .servicios-section {
      padding: 1.5rem 0;
    }
  }
</style>