// Obtener la ruta actual para marcar el elemento activo
const currentPath = Astro.url.pathname;

// Función para determinar si una ruta está activa
const isActive = (path: string) => {
  if (path === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(path);
};
