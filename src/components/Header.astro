---
import PhoneIcon from "./icons/PhoneIcon.astro";
import MailIcon from "./icons/MailIcon.astro";
import WhatsAppIcon from "./icons/WhatsAppIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import { business } from "../data/business";
import { navLinks } from "../data/navigation";
import TiktokIcon from "./icons/TiktokIcon.astro";

const currentPath = Astro.url.pathname;

const isActive = (path: string) => {
  if (path === "/") return currentPath === "/";
  return currentPath.startsWith(path);
};
---

<header class="header">
  <div class="header-top">
    <div class="container">
      <div class="contact-info">
        <a href={`tel:${business.phones[1].number}`} class="contact-item">
          <PhoneIcon size={16} />
          <span class="contact-text">{business.phones[1].display}</span>
        </a>
        <a href={`tel:${business.phones[0].number}`} class="contact-item">
          <PhoneIcon size={16} />
          <span class="contact-text">{business.phones[0].display}</span>
        </a>
        <a href={`mailto:${business.email}`} class="contact-item contact-email">
          <MailIcon size={16} />
          <span class="contact-text">{business.email}</span>
        </a>
      </div>
      <div class="social-links">
        <a
          href={business.social.whatsapp}
          target="_blank"
          rel="noopener"
          aria-label="WhatsApp"
          class="social-link whatsapp"
        >
          <WhatsAppIcon size={18} />
        </a>
        <a
          href={business.social.instagram}
          target="_blank"
          rel="noopener"
          aria-label="Instagram"
          class="social-link instagram"
        >
          <InstagramIcon size={18} />
        </a>
        <a
          href={business.social.tiktok}
          target="_blank"
          rel="noopener"
          aria-label="TikTok"
          class="social-link tiktok"
        >
          <TiktokIcon size={18} />
        </a>
      </div>
    </div>
  </div>

  <div class="header-main">
    <div class="container">
      <a href="/" class="logo">
        <img
          src="/images/logo-recorte.png"
          alt={business.name}
          class="logo-img"
        />
      </a>

      <button
        class="mobile-menu-toggle"
        aria-label="Abrir menÃº"
        id="mobileMenuToggle"
      >
        <span></span>
        <span></span>
        <span></span>
      </button>

      <nav class="nav" id="mainNav">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "nav-link",
              { active: isActive(link.href) && (link.href !== "/" || currentPath === "/") },
            ]}
          >
            {link.label}
          </a>
        ))}
        <a href={`tel:${business.mainPhone}`} class="btn-cta">
          <PhoneIcon size={16} />
          Pide cita
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  function initHeader() {
    const header = document.querySelector(".header");
    const mobileMenuToggle = document.getElementById("mobileMenuToggle");
    const mainNav = document.getElementById("mainNav");
    let ticking = false;
    let lastScrollY = window.scrollY;

    function handleScroll() {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const scrollY = window.scrollY;
          const scrollingDown = scrollY > lastScrollY;

          header?.classList.toggle("scrolled", scrollY > 50);

          if (window.innerWidth > 768) {
            if (scrollingDown && scrollY > 200) {
              header?.classList.add("header-hidden");
            } else {
              header?.classList.remove("header-hidden");
            }
          }

          lastScrollY = scrollY;
          ticking = false;
        });
        ticking = true;
      }
    }

    window.addEventListener("scroll", handleScroll, { passive: true });

    mobileMenuToggle?.addEventListener("click", () => {
      mobileMenuToggle.classList.toggle("active");
      mainNav?.classList.toggle("active");
      document.body.classList.toggle("menu-open");
    });

    const navLinks = document.querySelectorAll(".nav-link, .btn-cta");
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenuToggle?.classList.remove("active");
        mainNav?.classList.remove("active");
        document.body.classList.remove("menu-open");
      });
    });

    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      if (
        !target.closest(".header-main") &&
        mainNav?.classList.contains("active")
      ) {
        mobileMenuToggle?.classList.remove("active");
        mainNav?.classList.remove("active");
        document.body.classList.remove("menu-open");
      }
    });
  }

  document.addEventListener("astro:page-load", initHeader);
</script>

<style>
  .header {
    overflow: hidden;
    background-color: var(--color-brand);
  }

  .header-main {
    transition: padding var(--transition-base);
  }

  .header.scrolled .header-main { padding: 0.5rem 0; }
  .header.scrolled { box-shadow: var(--shadow-md); }

  .header-top {
    color: white;
    padding: 8px 0;
    font-size: 0.85rem;
  }

  .header.scrolled .header-top {
    transform: translateY(-100%);
    opacity: 0;
    pointer-events: none;
  }

  .header.header-hidden { transform: translateY(-100%); }

  .header-top .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .contact-info {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .contact-item:hover { color: var(--color-accent); }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: white;
    color: var(--color-secondary);
    transition: all var(--transition-base);
  }

  .social-links a:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .header-main { padding: 1rem 0; }

  .header-main .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    position: relative;
    z-index: 100;
  }

  .logo {
    padding: 0.5rem 1.25rem;
    background: var(--color-logo);
    border-radius: var(--radius-full);
    border: 1px solid rgba(167, 148, 128, 0.1);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }

  .logo:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .logo-img { height: 50px; width: auto; display: block; }

  .nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-base);
    position: relative;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: width var(--transition-base);
  }

  .nav-link:hover::after,
  .nav-link.active::after { width: 100%; }

  .btn-cta {
    padding: 0.75rem 1.5rem;
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-full);
    font-weight: 600;
    transition: all var(--transition-base);
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-cta:hover {
    color: black;
    background: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: white;
    border: none;
    cursor: pointer;
    padding: 0.6rem;
    border-radius: var(--radius-sm);
    z-index: 100;
  }

  .mobile-menu-toggle span {
    width: 22px;
    height: 2px;
    background: var(--color-secondary);
    transition: all var(--transition-base);
    border-radius: 2px;
  }

  .mobile-menu-toggle.active span:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
  .mobile-menu-toggle.active span:nth-child(2) { opacity: 0; }
  .mobile-menu-toggle.active span:nth-child(3) { transform: rotate(-45deg) translate(5px, -5px); }

  @media (max-width: 768px) {
    .header-top { display: none; }
    .header-main { padding: 0.75rem 0; }
    .mobile-menu-toggle { display: flex; }

    .nav {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      flex-direction: column;
      background: white;
      padding: 5rem 2rem 2rem;
      gap: 0;
      box-shadow: var(--shadow-lg);
      transform: translateX(100%);
      opacity: 0;
      pointer-events: none;
      transition: all 0.3s ease;
      z-index: 50;
      overflow-y: auto;
    }

    .nav.active {
      transform: translateX(0);
      opacity: 1;
      pointer-events: all;
    }

    .nav-link {
      color: var(--color-secondary);
      font-size: 1.1rem;
      padding: 1rem 0;
      border-bottom: 1px solid #f0f0f0;
      width: 100%;
      text-align: center;
    }

    .nav-link::after { display: none; }
    .nav-link.active { color: var(--color-primary); font-weight: 600; }

    .btn-cta {
      width: 100%;
      text-align: center;
      justify-content: center;
      margin-top: 1.5rem;
      padding: 1rem 1.5rem;
      font-size: 1rem;
    }

    .logo { padding: 0.35rem 0.75rem; }
    .logo-img { height: 38px; }
  }

  @media (max-width: 480px) {
    .logo { padding: 0.3rem 0.6rem; }
    .logo-img { height: 32px; }
    .mobile-menu-toggle { padding: 0.5rem; }
    .mobile-menu-toggle span { width: 20px; }
  }
</style>
