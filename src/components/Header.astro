      <button class="mobile-menu-toggle" aria-label="Abrir menú" id="mobileMenuToggle">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <nav class="nav" id="mainNav">
        <a href="/" class={currentPath === "/" ? "nav-link active" : "nav-link"}>Inicio</a>
        <a href="/servicios" class={currentPath === "/servicios" ? "nav-link active" : "nav-link"}>Servicios</a>
