---
/**
 * Componente SEO centralizado.
 * Gestiona title, meta description, Open Graph y Schema.org.
 */
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: "website" | "article";
  schema?: Record<string, unknown>;
  canonical?: string;
}

const {
  title,
  description,
  image = "/images/logo.png",
  type = "website",
  schema,
  canonical,
} = Astro.props;

const siteUrl = "https://esteticagalia.es";
const fullImageUrl = image.startsWith("http") ? image : `${siteUrl}${image}`;
const canonicalUrl = canonical ? `${siteUrl}${canonical}` : Astro.url.href;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:site_name" content="EstÃ©tica GaliaBeauty" />
<meta property="og:locale" content="es_ES" />

<!-- Twitter / X -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />

<!-- Schema.org -->
{schema && (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
)}
